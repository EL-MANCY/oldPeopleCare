<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/search_editbox"
    android:layout_margin="20dp">


    <TextView
        android:id="@+id/time_txtView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="15dp"
        android:text="08:00 AM"
        android:textColor="#000000"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/medicineImage"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/time_txtView"
        app:srcCompat="@drawable/medicine_pic" />

    <TextView
        android:id="@+id/medicineNameTxtView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="82dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="74dp"
        android:text="Panadol Extra"
        android:textColor="#0021F5"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/mark_icon"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintStart_toEndOf="@+id/medicineImage"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/medicineDescriptionTxtView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="82dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="74dp"
        android:text="1 pill after breakfast"
        android:textColor="#000000"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/mark_icon"
        app:layout_constraintStart_toEndOf="@+id/medicineImage"
        app:layout_constraintTop_toBottomOf="@+id/medicineNameTxtView" />

    <ImageView
        android:id="@+id/mark_icon"
        android:layout_width="21dp"
        android:layout_height="23dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_icon"
        app:srcCompat="@drawable/correct_mark" />

    <ProgressBar
        android:id="@+id/medicineProgressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="144dp"
        android:layout_height="9dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="81dp"
        android:backgroundTint="#DA2E2E"
        android:max="100"
        android:progress="50"
        android:progressBackgroundTint="#FFFFFF"
        android:progressTint="#06FA3C"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/medicineImage"
        app:layout_constraintTop_toBottomOf="@+id/medicineDescriptionTxtView" />

    <ImageView
        android:id="@+id/edit_icon"
        android:layout_width="21dp"
        android:layout_height="22dp"
        android:layout_marginStart="236dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="21dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/time_txtView"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/edit_icon" />


</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginEnd="20dp"
    android:layout_height="wrap_content"
    android:layout_marginVertical="5dp">


    <TextView
        android:id="@+id/messageRecieve"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/msgrounded"
        android:backgroundTint="#F3F1F1"
        android:paddingLeft="70dp"
        android:paddingTop="5dp"
        android:paddingRight="8dp"
        android:paddingBottom="20dp"
        android:text="Hello"
        android:maxWidth="350dp"
        android:textSize="16dp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ttime2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="@+id/messageRecieve"
        app:layout_constraintEnd_toEndOf="@+id/messageRecieve"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/messageRecieve"
        app:layout_constraintTop_toTopOf="@+id/messageRecieve"
        app:layout_constraintVertical_bias="0.9" />
</androidx.constraintlayout.widget.ConstraintLayout>
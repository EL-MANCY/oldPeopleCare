<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.Registration.RegistrationFragment"
        android:background="#FFFFFF">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="232dp"
            android:layout_height="149dp"
            android:layout_marginTop="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/register_main_pic" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Register"
            android:textColor="#008080"
            android:textSize="32sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

        <androidx.cardview.widget.CardView
            android:id="@+id/card1"
            android:layout_width="wrap_content"
            android:layout_height="390dp"
            android:layout_marginTop="25dp"
            app:cardCornerRadius="30dp"
            app:cardElevation="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintVertical_bias="0.0">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ScrollView
                    android:id="@+id/scrollView2"
                    android:layout_width="375dp"
                    android:layout_height="380dp"
                    android:layout_marginTop="1dp"
                    android:scrollbarAlwaysDrawHorizontalTrack="true"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/fullnameX"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:hint="Full Name"
                            app:endIconMode="clear_text"
                            app:errorTextColor="#EF0C0C"
                            app:hintTextColor="#00BCD4"
                            app:startIconDrawable="@drawable/useer"
                            app:startIconTint="@null">


                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/fullname"
                                android:layout_width="330dp"
                                android:layout_height="47dp"
                                android:layout_marginTop="31dp"
                                android:backgroundTint="#5CD9D9D9"
                                style="@style/MyHintTextStyle"
                                android:background="@drawable/et_style"
                                android:drawablePadding="10dp"
                                android:inputType="text"
                                android:paddingRight="10dp" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/emailX"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:hint="E-Mail"
                            app:endIconMode="clear_text"
                            app:errorTextColor="#EF0C0C"
                            app:hintTextColor="#008080"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.493"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/textView"
                            app:startIconDrawable="@drawable/email"
                            app:startIconTint="@null">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/email"
                                style="@style/MyHintTextStyle"
                                android:layout_width="330dp"
                                android:layout_height="52dp"
                                android:layout_marginTop="31dp"
                                android:background="@drawable/et_style"
                                android:backgroundTint="#5CD9D9D9"
                                android:inputType="textEmailAddress"
                                android:paddingRight="10dp"
                                android:drawablePadding="10dp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="parent" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/phoneX"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:hint="Phone"
                            app:endIconMode="clear_text"
                            app:errorTextColor="#EF0C0C"
                            app:hintTextColor="#00BCD4"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.496"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/emailX"
                            app:startIconDrawable="@drawable/phonee"
                            app:startIconTint="@null">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/phone"
                                android:layout_width="330dp"
                                android:layout_height="47dp"
                                android:layout_marginTop="31dp"
                                android:background="@drawable/et_style"
                                style="@style/MyHintTextStyle"
                                android:drawablePadding="10dp"
                                android:backgroundTint="#5CD9D9D9"
                                android:inputType="phone"
                                android:paddingRight="10dp"
                                app:hintTextColor="#041A8D"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/textView" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <TextView
                            android:id="@+id/DateOfBirth"
                            android:layout_width="330dp"
                            android:layout_height="47dp"
                            android:layout_marginTop="13dp"
                            android:background="@drawable/et_style"
                            android:drawableLeft="@drawable/date"
                            android:hint="  Date Of Birth"
                            android:drawablePadding="13dp"
                            style="@style/MyHintTextStyle"
                            android:backgroundTint="#5CD9D9D9"
                            android:paddingLeft="10dp"
                            android:paddingTop="10dp"
                            android:paddingRight="10dp"
                            android:paddingBottom="9dp"
                            android:textColor="#80000000"
                            android:textSize="16sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.496"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/phoneX" />

                        <androidx.cardview.widget.CardView
                            android:id="@+id/genderX"
                            android:layout_width="322dp"
                            android:layout_marginTop="16dp"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="30dp"
                            android:layout_marginHorizontal="50dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/p2"
                            app:layout_constraintVertical_bias="0.120000005">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <Spinner
                                    android:id="@+id/gender"
                                    style="@style/MyHintTextStyle"
                                    android:layout_width="322dp"
                                    android:layout_height="48dp"
                                    android:background="@drawable/et_style"
                                    android:backgroundTint="#5CD9D9D9"
                                    android:backgroundTintMode="src_in"
                                    android:drawableLeft="@drawable/date"
                                    android:entries="@array/gender"
                                    android:outlineProvider="none"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintVertical_bias="0.43" />

                                <ImageView
                                    android:id="@+id/imageView10"
                                    android:layout_width="26dp"
                                    android:layout_height="28dp"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintHorizontal_bias="0.03"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="@+id/gender"
                                    app:layout_constraintVertical_bias="0.55"
                                    app:srcCompat="@drawable/gender1" />
                            </androidx.constraintlayout.widget.ConstraintLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/registerAs"
                            android:layout_width="322dp"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="55dp"
                            android:layout_marginTop="16dp"
                            app:cardCornerRadius="30dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintVertical_bias="0.120000005">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <Spinner
                                    android:id="@+id/registerAsX"
                                    style="@style/MyHintTextStyle"
                                    android:layout_width="322dp"
                                    android:layout_height="48dp"
                                    android:background="@drawable/et_style"
                                    android:backgroundTint="#5CD9D9D9"
                                    android:backgroundTintMode="src_in"
                                    android:entries="@array/regist"
                                    android:outlineProvider="none"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintVertical_bias="0.43" />

                                <ImageView
                                    android:id="@+id/imageView11"
                                    android:layout_width="26dp"
                                    android:layout_height="28dp"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintHorizontal_bias="0.03"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="@+id/registerAsX"
                                    app:layout_constraintVertical_bias="0.55"
                                    app:srcCompat="@drawable/registaspic" />
                            </androidx.constraintlayout.widget.ConstraintLayout>

                        </androidx.cardview.widget.CardView>



<!--                        <com.google.android.material.textfield.TextInputLayout-->
<!--                            android:id="@+id/registerAsX"-->
<!--                            style="Widget.MaterialComponents.TextInputLayout.*.ExposedDropdownMenu"-->
<!--                            android:layout_width="wrap_content"-->
<!--                            android:layout_height="wrap_content"-->
<!--                            android:layout_marginTop="5dp"-->
<!--                            android:hint="Register AS"-->
<!--                            app:endIconMode="clear_text"-->
<!--                            app:errorTextColor="#EF0C0C"-->
<!--                            app:hintTextColor="#00BCD4"-->
<!--                            app:layout_constraintEnd_toEndOf="parent"-->
<!--                            app:layout_constraintHorizontal_bias="0.496"-->
<!--                            app:layout_constraintStart_toStartOf="parent"-->
<!--                            app:layout_constraintTop_toBottomOf="@+id/genderX"-->
<!--                            app:startIconDrawable="@drawable/reg">-->

<!--                            <AutoCompleteTextView-->
<!--                                android:layout_width="330dp"-->
<!--                                android:layout_height="47dp"-->
<!--                                android:background="@drawable/et_style"-->
<!--                                android:inputType="none"-->
<!--                                android:maxLines="@integer/material_motion_duration_long_1" />-->

<!--                        </com.google.android.material.textfield.TextInputLayout>-->

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/passwordX"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:hint="Password"
                            app:endIconMode="password_toggle"
                            app:errorTextColor="#EF0C0C"
                            app:hintTextColor="#008080"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.494"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/registerAsX"
                            app:startIconDrawable="@drawable/pass"
                            app:startIconTint= "@null"
                            >

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/password"
                                android:layout_width="330dp"
                                android:layout_height="52dp"
                                android:layout_marginTop="31dp"
                                android:background="@drawable/et_style"
                                android:inputType="textPassword"
                                style="@style/MyHintTextStyle"
                                android:backgroundTint="#5CD9D9D9"
                                android:paddingRight="10dp"
                                android:drawablePadding="10dp"
                                app:hintTextColor="#041A8D"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/textView" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/confirmpasswordX"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:hint="Confirm Password"
                            app:endIconMode="password_toggle"
                            app:errorTextColor="#EF0C0C"
                            app:hintTextColor="#008080"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.494"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/passwordX"
                            app:startIconDrawable="@drawable/pass"
                            app:startIconTint= "@null">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/confirmpassword"
                                android:layout_width="330dp"
                                android:layout_height="52dp"
                                android:layout_marginTop="31dp"
                                android:background="@drawable/et_style"
                                android:inputType="textPassword"
                                style="@style/MyHintTextStyle"
                                android:backgroundTint="#5CD9D9D9"
                                android:paddingRight="10dp"
                                android:drawablePadding="10dp"
                                app:hintTextColor="#041A8D"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/textView"  />
                        </com.google.android.material.textfield.TextInputLayout>


                    </LinearLayout>
                </ScrollView>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="By Signing Up you agree to our "
            android:textColor="#000000"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/LoginPath"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/card1"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/forgetpath"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Terms &amp; Privacy Policy"
            android:textColor="#008080"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/LoginPath"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.501"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/add"
            android:layout_width="294dp"
            android:layout_height="52dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/button"
            android:backgroundTint="#008080"
            android:text="Register"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            app:cornerRadius="30dp"
            app:layout_constraintBottom_toTopOf="@+id/LoginPath"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/forgetpath"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already Have Account?"
            android:textColor="#000000"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.419"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/add"
            app:layout_constraintVertical_bias="0.066" />

        <TextView
            android:id="@+id/LoginPath"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Log In"
            android:textColor="#008080"
            android:textStyle="bold"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/textView4" />




    </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>

